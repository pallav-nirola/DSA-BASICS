#include <iostream>
using namespace std;

class CircularQueue
{
public:
    int *array;
    int front;
    int rear;
    int currSize;
    int capacity;
    CircularQueue(int size)
    {
        capacity = size;
        currSize = 0;

        array = new int[capacity];
        front = 0;
        rear = -1;
    }
    void push(int data)
    {
        if (currSize == capacity)
        {
            cout << "size is full" << endl;
            return;
        }
        else
        {
            rear = (rear + 1) % capacity;
            array[rear] = data;
            currSize++;
        }
    }
    void pop()
    {
        if (currSize == 0)
        {
            return;
        }
        else
        {
            front = (front + 1) % capacity; // you are just overwriting the value
            currSize--;
        }
    }
    int getfront()
    {
        return array[front];
    }
    void printArray()
    {

        for (int i = 0; i < capacity; i++)
        {
            cout << array[i] << "  ";
        }
        cout << endl;
    }
};
int main()
{
    CircularQueue C(3);
    C.push(0);
    C.push(1);
    C.push(2);
    C.printArray();
    C.pop();
    C.push(4);
    C.printArray();

    return 0;
}
