#include <bits/stdc++.h>
using namespace std;
//UNABLE TO DI TI FOR NEGATIVE WIEGTHS AS IT WILL FALL UNDER AN INFINITE LOOP
class Solution
{
public:
    // Function to find the shortest distance of all vertices from the source vertex S.
    vector<int> dijkstra(int V, vector<pair<int, int>> adj[], int S)
    {
        // Min-heap (priority queue) to store {distance, node}
        priority_queue<pair<int, int>, vector<pair<int, int>>, greater<pair<int, int>>> pq;

        // Initialize distances with infinity
        vector<int> dist(V, 1e9);
        dist[S] = 0;

        // Push the source node with distance 0
        pq.push({0, S});

        while (!pq.empty())
        {
            int dis = pq.top().first;
            int node = pq.top().second;
            pq.pop();//When you pop a node from the priority queue (node), it means youâ€™re currently at that vertex with distance dis (the shortest distance so far).

            // Relax adjacent nodes
            for (auto it : adj[node]) // auto is general for all dat types like general for pair int char , also can use teh synatx of when we make it like int neighbour : aj[node] as for (pair<int , int> neighbour : adj[node])
            {
                int adjNode = it.first;
                int edgeWeight = it.second;

                if (dis + edgeWeight < dist[adjNode])
                {
                    dist[adjNode] = dis + edgeWeight;
                    pq.push({dist[adjNode], adjNode});// if you discover a btter path then only push it in the vector
                }
            }
        }

        return dist;
    }
};

int main()
{
    int V = 6; // Nodes: 0,1,2,3,4,5
    vector<pair<int, int>> adj[V];

    // Your graph (undirected)
    adj[0].push_back({1, 4});
    adj[0].push_back({2, 4});

    adj[1].push_back({0, 4});
    adj[1].push_back({2, 2});

    adj[2].push_back({0, 4});
    adj[2].push_back({1, 2});
    adj[2].push_back({3, 3});
    adj[2].push_back({5, 6});
    adj[2].push_back({4, 1});

    adj[3].push_back({2, 3});
    adj[3].push_back({5, 2});

    adj[4].push_back({2, 4});
    adj[4].push_back({5, 3});

    adj[5].push_back({4, 3});
    adj[5].push_back({3, 2});
    adj[5].push_back({2, 6}); // you mentioned this extra edge

    int source = 0;
    Solution obj;
    vector<int> dist = obj.dijkstra(V, adj, source);

    cout << "Shortest distances from source " << source << ":\n";
    for (int i = 0; i < V; i++)
    {
        cout << "Node " << i << " -> " << dist[i] << "\n";
    }

    return 0;
}
