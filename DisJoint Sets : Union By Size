#include <bits/stdc++.h>
using namespace std;

class DisjointSet {
    vector<int> parent, size; // size instead of rank

public:
    // Constructor
    DisjointSet(int n) {
        parent.resize(n + 1);
        size.resize(n + 1, 1); // Initially, every set has size 1
        for (int i = 0; i <= n; i++) {
            parent[i] = i;
        }
    }

    // Find with path compression
    int findUPar(int node) {
        if (node == parent[node])
            return node;
        return parent[node] = findUPar(parent[node]);
    }

    // Union by size
    void unionBySize(int u, int v) {
        int ulp_u = findUPar(u);
        int ulp_v = findUPar(v);

        if (ulp_u == ulp_v) return; // Already in same set

        // Attach smaller set under larger set
        if (size[ulp_u] < size[ulp_v]) {
            parent[ulp_u] = ulp_v;
            size[ulp_v] += size[ulp_u];
        } else {
            parent[ulp_v] = ulp_u;
            size[ulp_u] += size[ulp_v];
        }
    }
};

// Example usage
int main() {
    DisjointSet ds(5); // 5 elements: 0..5
    ds.unionBySize(1, 2);
    ds.unionBySize(2, 3);
    cout << ds.findUPar(3) << endl; // Should print representative of set containing 3
    return 0;
}
