#include <iostream>
#include <vector>
using namespace std;

int main()
{
    vector<int> array =   {3, 4, 8, -9, 20, 6};
    int n = array.size();

    if (n == 0)
    {
        cout << "Array is empty" << endl;
        return 0;
    }

    int idx = 1;
    int leftSum = array[0];

    int rightSum = 0;
    for (int i = idx + 1; i < n; i++)
    {
        rightSum += array[i];
    }

while (leftSum != rightSum && idx < n -1)//for not infinite loop//
{
    leftSum = leftSum + array[idx];
    rightSum = rightSum - array[idx + 1];
    idx ++;
}


    if ( leftSum == rightSum)
    {
        cout << "Equilibrium index: " << idx << endl;
    }
    else
    {
        cout << "No equilibrium index found" << endl;
    }

    return 0;
}
