#include <iostream>
#include <queue>
#include <unordered_map>
using namespace std;
int First_Unique_Character(string str)
{
    unordered_map<char, int> mp;
    queue<int> q;// store the index of the character , not the character itself
    for (int i = 0; i < str.length(); i++)
    {
        if (mp.find(str[i]) == mp.end())
        {
            q.push(i);
        }
        mp[str[i]]++;
    }
    while (q.empty() == 0 && mp[str[q.front()]] >= 2)
    {
        q.pop();
    }
    if (q.empty() == 1)
    {
        return -1;
    }
    else
    {
        return q.front();
    }
}

int main()
{
    string str;
    cout << "Enter the string: ";
    getline(cin, str);
    cout << First_Unique_Character(str);
    return 0;
}
