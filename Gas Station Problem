M Approach 
class Solution
{
    bool IsSafe(vector<int> &gas, vector<int> &cost)
    {
        int gasAvailable = 0;
        int TotalCost = 0;
        for (int i = 0; i < gas.size(); i++)
        {
            gasAvailable = gasAvailable + gas[i];
            TotalCost = TotalCost + cost[i];
        }
        if (gasAvailable < TotalCost)
        {
            return false;
        }
        else
        {
            return true;
        }
    }
    int GasStation(vector<int> &gas, vector<int> &cost)
    {
        if (IsSafe(gas, cost) == true)
        {
            int startIdx = 0;
            int costIdx = 0;
            int currGas = 0;
            int ans = 0;
            for (int i = 0; i < gas.size(); i++)
            {
                currGas = currGas + gas[i] - cost[i];
                if (currGas >= 0)
                {
                    ans = i; // the main problme here was let say you got currGas as +1, +3, +5, +4, +2
so everytime you will be updating ans and at last ans becomes +2 index , but although it was the first one , so you have to return where you first found that
                }
                else
                {
                    startIdx = (startIdx + 1) % gas.size();
                    costIdx = (costIdx + 1) % gas.size();
                    ans = -1;
                    currGas = 0;
                }
            }
            return ans;
        }
        else
        {
            return -1;
        }
    }
};
class Solution {
public:
        bool IsSafe(vector<int>& gas, vector<int>& cost) {
            int gasAvailable = 0;
            int TotalCost = 0;
            for (int i = 0; i < gas.size(); i++) {
                gasAvailable = gasAvailable + gas[i];
                TotalCost = TotalCost + cost[i];
            }
            if (gasAvailable < TotalCost) {
                return false;
            } else {
                return true;
            }
        }
        int canCompleteCircuit(vector<int>& gas, vector<int>& cost) {
            if (IsSafe(gas, cost) == true) {
                int startIdx = 0;
                int costIdx = 0;
                int currGas = 0;
                for (int i = 0; i < gas.size(); i++) {
                    currGas = currGas + gas[i] - cost[i];
                    if (currGas >= 0) 
                    {
                    } 
                    else {
                        startIdx = (1 + i) % gas.size(); ,, agar joh hamne ans update kiya tha agr woh nhi hai toh pichle koi vi answer bn hi nhi skt
                        costIdx = (1 + i) % gas.size();
                        currGas = 0;
                    }
                }
                return startIdx;
            }
             else {
                return -1;
            }
        }
    };
    
