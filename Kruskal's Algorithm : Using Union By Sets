#include <bits/stdc++.h>
using namespace std;

// Disjoint Set with Union by Rank + Path Compression
class DisjointSet {
    vector<int> parent, rank;
public:
    DisjointSet(int n) {
        parent.resize(n + 1);
        rank.resize(n + 1, 0);
        for (int i = 0; i <= n; i++) parent[i] = i;
    }

    int findUltimatePar(int node) {
        if (node == parent[node]) return node;
        return parent[node] = findUltimatePar(parent[node]);
    }

    void unite(int u, int v) {
        int pu = findUltimatePar(u);
        int pv = findUltimatePar(v);
        if (pu == pv) return;

        if (rank[pu] < rank[pv]) parent[pu] = pv;
        else if (rank[pv] < rank[pu]) parent[pv] = pu;
        else { parent[pv] = pu; rank[pu]++; }
    }
};

// Kruskal's Algorithm Function
int kruskalMST(int V, vector<tuple<int,int,int>>& edges) {
    // Sort edges by weight
    sort(edges.begin(), edges.end());

    DisjointSet ds(V);
    int mstWeight = 0;

  for (tuple<int,int,int> e : edges) {
    int w, u, v;
    tie(w,u,v) = e; // tie is used for tuple and it unpacks the object weights , u and v 
        if(ds.findUltimatePar(u) != ds.findUltimatePar(v)) {
            ds.unite(u,v);
            mstWeight += w;
        }
    }

    return mstWeight;
}

int main() {
    int V = 4; // Number of vertices (0..3)
    vector<tuple<int,int,int>> edges = {
        {2,0,1},
        {6,0,3},
        {3,1,2},
        {8,1,3},
        {5,2,3}
    };

    cout << "MST Weight: " << kruskalMST(V, edges) << endl;

    return 0;
}
