#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next; //means that a Pointer of node type is createded pointing towards next
};

int main() {
    Node* node1 = new Node; // new Node → makes a new Node in memory
// node1 → is a pointer that stores the address of that new Node

    node1->data = 10;// manually setting it as no constructor used as of now
    node1->next = NULL;

    cout << node1->data << endl;
    cout << node1->next << endl;
//Now USING CONSTRUCTOR 
#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;
    Node(int value ){
        data = value;
        next = NULL;
    }
};

int main() {
    Node* node1 = new Node(10); 
     cout << node1->data << endl;
    cout << node1->next << endl;

    return 0;
}


    return 0;

}
