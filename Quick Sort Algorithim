#include <iostream>
#include <algorithm>
using namespace std;

int partition(int array[], int start, int end)
{
    int idx = start - 1;
    int pivot = array[end];
    for (int j = start; j < end; j++)
    {
        if (array[j] < pivot)
        {
            idx++;
            swap(array[j], array[idx]);
        }
    }
    idx++;
    swap(array[idx], array[end]);
    return idx;
}
void QuickSort(int arr[], int start, int end)
{
    if (start < end)
    {
        int pivIdx = partition(arr, start, end);
        QuickSort(arr, start, pivIdx - 1);
        QuickSort(arr, pivIdx + 1, end);
    }
}

int main()
{
    int arr[] = {6, 5, 9, 4, 7, 3, 2, 1};
    QuickSort(arr, 0, 7);
    for (int i = 0; i < 8; i++)
    {
        cout << arr[i] << " ";
    }
    return 0;
}
