
#include <iostream>
#include <string>
#include <algorithm>
using namespace std;
int main()
{

    string str;
    cout << "Enter a string: ";
    getline(cin, str);
    int length = str.length();
    bool found = true;

    for (int i = 0; i < length / 2; i++)
    {
        if (str[i] != str[length - i - 1])
        {
            break;
            return false;
        }
        else
        {
            found = true;
        }
    }
    if (found == true)
    {
        cout << "The string is a palindrome" << endl;
    }
    else
    {
        cout << "The string is not a palindrome" << endl;
    }
    {
        /* code */
    }

    return 0;
}
