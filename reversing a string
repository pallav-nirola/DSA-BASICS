#include <iostream>
#include <algorithm>  // For reverse
#include<string>
using namespace std;

int main() {
    string str;  // C++ string object
    cout << "Enter the string: ";
    getline(cin, str);  // Read an entire line, including spaces

    // Get the length of the string
    cout << "The length of the string is: " << str.size() << endl;  // Or str.length()

    reverse(str.begin(), str.end());  // Reverse the string using reverse()

    cout << "The reversed string is: " << str << endl;  // Output the reversed string
    return 0;
}
