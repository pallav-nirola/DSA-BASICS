#include <iostream>
using namespace std;
int main()
{

  char array[20];
  cout << "Enter a string: ";
  cin >> array;
  int length = 0;

  for (int i = 0; array[i] != '\0'; i++)
  {
    length++;
  }

  for (int i = 0; i < length / 2; i++)
  {
    swap(array[i], array[length - i-1]);
  }

  cout << "The  reversed string is: " << array << endl;
  return 0;
}
